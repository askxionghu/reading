<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jaeger.reading" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="org.litepal.LitePalApplication"  >

        <activity
            android:name=".activity.MainActivity"
            android:label="在读"
            android:logo="@drawable/ic_tab_content_normal"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.AddNewBookActivity"
            android:theme="@style/AppBaseTheme"
            android:label="添加新书" />

        <activity android:name=".activity.BookDetailActivity"
            android:theme="@style/AppBaseTheme"
            android:label="书籍信息" />

        <activity android:name=".activity.BrowseActivity"
            android:theme="@style/AppBaseTheme"
            android:label="浏览推荐" />


    </application>

</manifest>
